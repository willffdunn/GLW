@model List<League>

<div class="container-fluid" style="width: 100%;">
    <div class="row pt-2 pb-1 align-items-center" style="margin-top: -50px;">
        <div class="col-md-6">
            <h3 class="text-primary text-center">Golf League List</h3>
        </div>
        <div class="col-md-6 text-md-end text-center">
            <a asp-controller="GolfCourse" asp-action="Upsert" class="btn btn-primary">
                Add Golf League
                <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>

    <div>
        <table id="lTable" class="table table-bordered table-striped">
            <thead class="bg-warning">
                <tr>
                    <th>Action</th>
                    <th>League Name</th>
                    <th>Street</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Zip</th>
                    <th>Phone</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="League" asp-action="Browse" asp-route-LID="@obj.LId" class="btn btn-primary">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            </div>
                        </td>
                        <td>
                            <a href="League/Upsert?GCID=@obj.LId"> @obj.LeagueName </a>
                        </td>
                        <td>@obj.LStreet</td>
                        <td>@obj.LCity</td>
                        <td>@obj.LState</td>
                        <td>@obj.LZip</td>
                        <td>@obj.LContactPhoneNumber</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="League" asp-action="Delete" asp-route-LID="@obj.LId" class="btn btn-danger">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#lTable').DataTable();
    });
</script>
