@using Models
@model League
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<style>
    input, select {
        text-align: center;
        font-weight: 500;
        color: #325d88;
    }

    label {
        font-weight: 800;
        color: black;
    }
</style>

<form method="post">
    <div asp-validation-summary="All"></div>

    <div class="container mt-3">
        <h3 class="text-primary text-center">@Model.LId != 0 ? "Update" : "Create a League"</h3>
        <hr />
        <div class="row">
            <input type="hidden" asp-for="@Model.LId" />

            <div class="col-md-6 mb-3">
                <label asp-for="LeagueName">League Name</label>
                <input asp-for="LeagueName" class="form-control" placeholder="League Name" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="LStreet">Street</label>
                <input asp-for="LStreet" class="form-control" placeholder="Street" />
            </div>

            <div class="col-md-4 mb-3">
                <label asp-for="LCity">City</label>
                <input asp-for="LCity" class="form-control" placeholder="City" />
            </div>

            <div class="col-md-2 mb-3">
                <label asp-for="LState">State</label>
                <input asp-for="LState" class="form-control" placeholder="State" />
            </div>

            <div class="col-md-3 mb-3">
                <label asp-for="LZip">Postal Code</label>
                <input asp-for="LZip" class="form-control" placeholder="Postal Code" />
                <span asp-validation-for="LZip" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="LContactFName">Admin First Name</label>
                <input asp-for="LContactFName" class="form-control" placeholder="First Name" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="LContactLName">Admin Last Name</label>
                <input asp-for="LContactLName" class="form-control" placeholder="Last Name" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="LContactEmail">Admin Email</label>
                <input asp-for="LContactEmail" class="form-control" placeholder="Email" />
                <span asp-validation-for="LContactEmail" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="LContactPhoneNumber">Admin Phone Number</label>
                <input asp-for="LContactPhoneNumber" class="form-control" placeholder="Phone Number" />
                <span asp-validation-for="LContactPhoneNumber" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="LSeasonStart">Season Start</label>
                <input type="date" asp-for="LSeasonStart" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="LSeasonEnd">Season End</label>
                <input type="date" asp-for="LSeasonEnd" class="form-control" />
            </div>

            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" autocomplete="new-password" placeholder="Password" />
                    <label asp-for="Password" class="ms-2 text-muted">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm Password" />
                    <label asp-for="ConfirmPassword" class="ms-2 text-muted">Confirm Password</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12 mb-3">
                <label asp-for="LDescription">League Description</label>
                <textarea id="summernote" asp-for="LDescription" class="form-control" placeholder="League Description"></textarea>
                <span asp-validation-for="LDescription" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Save Changes</button>
            </div>
            <div class="col-6">
                <a asp-controller="League" asp-action="Browse" asp-route-LId="@Model.LId" class="btn btn-secondary form-control">Cancel</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    $(document).ready(function () {
        $('#summernote').summernote({
            placeholder: 'Create Event',
            height: 150,
            minHeight: null,
            maxHeight: null,
            focus: true,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'italic', 'underline', 'clear']],
                ['fontname', ['fontname']],
                ['fontsize', ['fontsize']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['height', ['height']],
                ['insert', ['picture', 'link', 'video']],
                ['table', ['table']],
                ['view', ['fullscreen', 'codeview']],
            ]
        });

        let buttons = $('.note-editor button[data-toggle="dropdown"]');
        buttons.each((key, value) => {
            $(value).on('click', function () {
                $(this).attr('data-bs-toggle', 'dropdown');
            });
        });
    });
</script>
