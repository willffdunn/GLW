@using Models
@model List<GGScoreVP>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<partial name="pvNotification" />
<div class="container" style="margin-top:-50px">
    <form method="post" class="row gy-2 gx-3 align-items-center">
        <div class="row pt-2 pb-1">
            <div class="col=6" style="text-align:center">
                <h5 class="text-primary">@ViewBag.GGName: @ViewBag.GRDate -  @ViewBag.GGTtime</h5>
                <h5 class="text-primary">@ViewBag.GCName</h5>
                <style>
                    input {
                        border-style: none;
                        width: 30px;
                        text-align: center;
                    }

                    select {
                        border-style: solid;
                        width: 82px;
                        text-align: center;
                        font-size:medium;
                        color: #29abe0;
                    }

                    select option {
                        border-style: solid;
                        width: 82px;
                        text-align: center;
                        font-size: medium;
                    }

                    table, th, td {
                        border: 0px;
                        text-align: center;
                    }

                    td {
                        height: 40px;
                        width: 60px;
                        font-weight: bold;
                        text-align: center;
                        font-size:medium;
                        color: #325d88;
                    }

                    tr {
                        background-color: white;
                        font-size: 1.00em;
                        font-weight: bold;
                        text-align:center;
                    }
                </style>
                <br/>
                <div class="container" style="align-content:center">
                    <table style="margin-left: -20px">
                        <thead>
                            <tr >
                                <th>
                                    Player
                                </th>
                                <th>
                                   Hole
                                </th>
                                 <th>
                                    Strokes
                                </th>
                                <th>
                                    Putts
                                </th>
                                 <th>
                                    Drive
                                </th>
                                <th>
                                    Total
                                </th>
                        </thead>
                        <tbody>
                        @if (Model != null)
                         {
                                 int i = 0;
                                 while (i < Model.Count)
                                    {
                                        <tr class="mb-3">
                                            <td style="width: 95px; font-size: medium">

                                                 @Model[i].GP.GPFName  @Model[i].GP.GPLName 

                                            </td>
                                            <td>
                                                <input disabled asp-for=@Model[i].GPS.GHId value=@Model[i].GPS.GHId
                                                style="text-align: center; font-weight: bold;
                                                font-size: xxmedium; color: black; width:35px" />
                                                <input type="hidden" asp-for=@Model[i].GPS.GHId />
                                                <input type="hidden" asp-for=@Model[i].GPS.GPSId />
                                                <input type="hidden" asp-for=@Model[i].GPS.GPId />
                                                <input type="hidden" asp-for=@Model[i].GG />
                                                <input type="hidden" asp-for=@Model[i].GC />
                                                <input type="hidden" asp-for=@Model[i].GP />
                                            </td>

                                            <td>
                                                <select asp-for=@Model[i].GPS.GPSStrokes value=@Model[i].GPS.GPSStrokes class="select">
                                                    <option value=" "></option>
                                                    <option value="1">1</option>
                                                    <option value="2">2</option>
                                                    <option value="3">3</option>
                                                    <option value="4">4</option>
                                                    <option value="5">5</option>
                                                    <option value="6">6</option>
                                                    <option value="7">7</option>
                                                    <option value="8">8</option>
                                                    <option value="9">9</option>
                                                    <option value="10">10</option>
                                                </select>
                                            </td>
                                            <td>
                                                <select asp-for=@Model[i].GPS.GPSPutts value="@Model[i].GPS.GPSPutts">
                                                    <option value=" "></option>
                                                    <option value="1">1</option>
                                                    <option value="2">2</option>
                                                    <option value="3">3</option>
                                                    <option value="4">4</option>
                                                    <option value="5">5</option>
                                                    <option value="6">6</option>
                                                </select>
                                            </td>
                                                
                                            <td>
                                                <select asp-for=@Model[i].GPS.GPSFW value="@Model[i].GPS.GPSFW" >
                                                    <option value=" "></option>
                                                    <option value="Fairway Center">Fwy Cntr</option>
                                                    <option value="Fairway Left">Fwy Lft</option>
                                                    <option value="Fairway Right">Fwy Rght</option>
                                                    <option value="Rough Left">Rgh Lft</option>
                                                    <option value="Rough Left">Rgh Rght</option>
                                                    <option value="Out of Bounds">OB</option>
                                                </select>
                                            </td>
                                            <td>@Model[i].GP.Tot3</td>
                                        </tr>
                                      i++;
                                 }
                              
                        }
                        </tbody>
                    </table>
                </div>
                <br />
                <div class="row">
                    <div class="col-6">
                        <button type="submit" asp-controller="GolfScore" asp-action="GGScoreM"
                                class="btn btn-primary btn-sm form-control">
                            Score
                        </button>
                    </div>
                    <div class="col-6">
                        <a asp asp-controller="GolfScore" asp-action="GGScoreP" asp-route-GHId="@Model[0].GPS.GHId " asp-route-GGId=@ViewBag.GGId class="btn btn-secondary form-control">
                            Previous
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {



    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
