@using Models;
@model GPScoreVM

<div class-"container" style="margin-top: -50px">
    <form method="post">
    <div class="row pt-2 pb-1" >
        <div class="col=6" style="text-align:center"> 
            <h3>@Model.GC.GCName</h3>
            <h3>Player Scorecard - @ViewBag.GRDate @ViewBag.GGTtime</h3>
        </div>
    </div>
    <style>
        input {
            border-style: none;
            width: 30px;
            text-align: center;
        }
        select {
            border-style: none;
            width: 30px;
            text-align: center;
            font-size:small;
        }
        table, th, td {
            border: 1px solid black;
            text-align: center;
        }

        td {
            height: 40px;
        }

        tr:nth-child(0) {
            background-color: green;
            color: white;
        }

        tr:nth-child(1) {
            background-color: @Model.GC.GCT1;
            color: @Model.GC.GCC1;
        }

        tr:nth-child(2) {
            background-color: @Model.GC.GCT2;
            color: @Model.GC.GCC2;
        }

        tr:nth-child(3) {
            background-color: @Model.GC.GCT3;
            color: @Model.GC.GCC3;
        }

        tr:nth-child(4) {
            background-color: @Model.GC.GCT4;
            color: @Model.GC.GCC4;
        }

        tr:nth-child(11) {
            background-color: @Model.GC.GCT5;
            color: @Model.GC.GCC5;
        }

        th {
            background-color: green;
            color: white;
        }

        .T1 {
            background-color: white;
            color: black;
        }
        .T2 {
            background-color: wheat;
            color: black;
        }
    </style>
                <input type="hidden" asp-for=@Model.GC/>
                <input type="hidden" asp-for=@Model.GG />
                <input type="hidden" asp-for=@Model.GP />
    <table border="0" >
        <thead>
            <tr>
                <td>
                    <table border="0">
                        <thead>
                            <tr>
                                <th width="270px">
                                    Hole
                                </th>
                                <th>1</th>
                                <th>2</th>
                                <th>3</th>
                                <th>4</th>
                                <th>5</th>
                                <th>6</th>
                                <th>7</th>
                                <th>8</th>
                                <th>9</th>
                                <th>Out</th>
                                <th>10</th>
                                <th>11</th>
                                <th>12</th>
                                <th>13</th>
                                <th>14</th>
                                <th>15</th>
                                <th>16</th>
                                <th>17</th>
                                <th>18</th>
                                <th width="150px">In</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <img src="~/Palm-Beach-National4.jpg" style="width: 100%">        
                                 
                                <td maxlength="5">@Model.GC.GCT1</td>

                                @for (int i = 0; i < 9; i++)
                                {
                                    <td maxlength="5" style="width: 50px">
                                        @Model.GPS[i].GolfCourseHole.GHT1
                                    </td>
                                }
                                <td>@Model.GC.GCT1TotOut</td>
                                @for (int i = 9; i < 18; i++)
                                {
                                    <td maxlength="5" style="width: 50px">
                                        @Model.GPS[i].GolfCourseHole.GHT1
                                    </td>
                                }
                                <td>@Model.GC.GCT1TotIn</td>
                                <td>@Model.GC.GCT1Tot</td>
                            </tr>
                            <tr>
                                <td maxlength="5"> @Model.GC.GCT2</td>

                                @for (int i = 0; i < 9; i++)
                                {
                                    <td maxlength="5" style="width: 50px">
                                        @Model.GPS[i].GolfCourseHole.GHT2
                                    </td>
                                }
                                <td>@Model.GC.GCT2TotOut</td>
                                @for (int i = 9; i < 18; i++)
                                {
                                    <td maxlength="5" style="width: 50px">
                                         @Model.GPS[i].GolfCourseHole.GHT2
                                    </td>
                                }
                                <td>@Model.GC.GCT2TotIn</td>
                                <td>@Model.GC.GCT2Tot</td>
                            </tr>
                            <tr>
                                <td maxlength="5"> @Model.GC.GCT3</td>

                                @for (int i = 0; i < 9; i++)
                                {
                                    <td maxlength="5" style="width: 5px">
                                         @Model.GPS[i].GolfCourseHole.GHT3
                                    </td>
                                }
                                <td>@Model.GC.GCT3TotOut</td>
                                @for (int i = 9; i < 18; i++)
                                {
                                    <td maxlength="5" style="width: 50px">
                                         @Model.GPS[i].GolfCourseHole.GHT3
                                    </td>
                                }
                                <td>@Model.GC.GCT3TotIn</td>
                                <td>@Model.GC.GCT3Tot</td>
                            </tr>
                            <tr>
                                <td maxlength="5">@Model.GC.GCT4</td>

                                @for (int i = 0; i < 9; i++)
                                {
                                    <td maxlength="5" style="width: 50px">
                                         @Model.GPS[i].GolfCourseHole.GHT4
                                    </td>
                                }
                                <td>@Model.GC.GCT4TotOut</td>
                                @for (int i = 9; i < 18; i++)
                                {
                                    <td maxlength="5" style="width: 50px">
                                         @Model.GPS[i].GolfCourseHole.GHT4
                                    </td>
                                }
                                <td>@Model.GC.GCT4TotIn</td>
                                <td>@Model.GC.GCT4Tot</td>
                            </tr>
                            <tr class="T2">
                                <td maxlength="5" class="T2">Par</td>

                                @for (int i = 0; i < 9; i++)
                                {
                                    <td maxlength="5" style="width: 50px" class="T2">
                                         @Model.GPS[i].GolfCourseHole.GHPar
                                    </td>
                                }
                                <td>@Model.GC.GCParOut</td>
                                @for (int i = 9; i < 18; i++)
                                {
                                    <td maxlength="5" style="width: 50px" class="T2">
                                         @Model.GPS[i].GolfCourseHole.GHPar
                                    </td>
                                }
                                <td>@Model.GC.GCParIn</td>
                                <td>@Model.GC.GCParTot</td>
                            </tr>
                            <tr class="T1">
                                <td maxlength="5" class="T1">
                                    @if (@Model.GP.GPType == "Guest")
                                    {
                                        @Model.GP.GPFName   @Model.GP.GPFName
                                    }
                                    else
                                    {
                                        @Model.GP.Member.FirstName   @Model.GP.Member.LastName
                                    }
                                </td>

                                @for (int i = 0; i < 9; i++)
                                {
                                    <td  >
                                        <input type="hidden" asp-for=@Model.GPS[i].GHId />
                                        <input type="hidden" asp-for=@Model.GPS[i].GPId />
                                        <input type="hidden" asp-for=@Model.GPS[i].GPSId />
                                        <input type="numeric"asp-for=@Model.GPS[i].GPSStrokes class="input" />
                                    </td>
                                }
                                <td>@Model.GP.Tot1</td>

                                @for (int i = 9; i < 18; i++)
                                {
                                    <td>
                                        <input type="hidden" asp-for=@Model.GPS[i].GHId />
                                        <input type="hidden" asp-for=@Model.GPS[i].GPId />
                                        <input type="hidden" asp-for=@Model.GPS[i].GPSId />
                                        <input type="numeric" asp-for=@Model.GPS[i].GPSStrokes class="input" />
                                    </td>
                                }
                                <td>@Model.GP.Tot2</td>
                                <td>@Model.GP.Tot3</td>
                            </tr>
                            <tr class="T1">
                                <td maxlength="5" class="T1">Putts</td>
                                @for (int i = 0; i < 9; i++)
                                {
                                    <td>
                                        <input type="numeric" asp-for=@Model.GPS[i].GPSPutts class="input" />
                                    </td>
                                }
                                <td>@Model.GP.PTot1</td>
                                @for (int i = 9; i < 18; i++)
                                {
                                    <td>
                                        <input type="numeric" asp-for=@Model.GPS[i].GPSPutts class="input" />
                                    </td>
                                }
                                <td>@Model.GP.PTot2</td>
                                <td>@Model.GP.PTot3</td>
                            </tr>
                            <tr class="T1">
                                <td maxlength="5" class="T1">Greens In Reg</td>
                                @for (int i = 0; i < 9; i++)
                                {
                                    <td>
                                        <select asp-for="@Model.GPS[i].GPSGIY" class="select" >
                                            <option value="Yes">Y</option>
                                            <option value="No">N</option>
                                        </select>
                                    </td>
                                }
                                <td>@ViewBag.GIYPerc1</td>

                                @for (int i = 9; i < 18; i++)
                                {
                                   <td>
                                        <select asp-for="@Model.GPS[i].GPSGIY" class="select" >
                                            <option value="Yes" ><small>Y</small></option>
                                            <option value="No">No</option>
                                        </select/>
                                    </td>
                                }
                                
                                <td>@ViewBag.GIYPerc2</td>
                                <td>@ViewBag.GIYPerc3</td>
                            </tr>
                            <tr class="T1">
                                <td maxlength="5" class="T1">Drive on Fairway</td>
                                @for (int i = 0; i < 9; i++)
                                {
                                    <td>
                                        <select asp-for=@Model.GPS[i].GPSFW class="select" >
                                            <option value="Yes">Y</option>
                                            <option value="No" >N</option>
                                        </select/>
                                    </td>
                                }
                                <td>@ViewBag.GIYPerc4</td>
                                @for (int i = 9; i < 18; i++)
                                {
                                    <td>
                                        <select asp-for=@Model.GPS[i].GPSFW class="select">
                                            <option value="Yes">Y</option>
                                            <option value="No" >N</option>
                                        </select/>
                                    </td>
                                }
                                <td>@ViewBag.GIYPerc5</td>
                                <td>@ViewBag.GIYPerc6</td>
                            </tr>
                            <tr class="T2">
                                <td maxlength="5" class="T2">Handicap</td>

                                @for (int i = 0; i < 9; i++)
                                {
                                    <td maxlength="5" style="width: 50px" class="T2">
                                         @Model.GPS[i].GolfCourseHole.GHHandicap
                                    </td>
                                }
                                <td></td>
                                @for (int i = 9; i < 18; i++)
                                {
                                    <td maxlength="5" style="width: 50px" class="T2">
                                         @Model.GPS[i].GolfCourseHole.GHHandicap
                                    </td>
                                }
                                <td></td>
                                <td></td>
                            </tr>
                            <tr class="T1">
                                <td maxlength="5">@Model.GC.GCT5</td>

                                @for (int i = 0; i < 9; i++)
                                {
                                    <td maxlength="5" style="width: 50px">
                                        @Model.GPS[i].GolfCourseHole.GHT5
                                    </td>
                                }
                                <td>@Model.GC.GCT5TotOut</td>
                                @for (int i = 9; i < 18; i++)
                                {
                                    <td maxlength="5" style="width: 50px">
                                         @Model.GPS[i].GolfCourseHole.GHT5
                                    </td>
                                }
                                <td>@Model.GC.GCT5TotIn</td>
                                <td>@Model.GC.GCT5Tot</td>

                            </tr>
                        </tbody>
                    </table>
                </td>
        </thead>
    </table>
    <br/> 
       <div class="row">
            <div class="col-6">

             <button type="submit" class="btn btn-primary form-control">Save Changes</button>
 
            </div>
            <div class="col-6">
                <a  asp-controller="GolfPlayer" asp-action="Index" asp-route-GGId=@ViewBag.GGId class="btn btn-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
    </form>
</div>
@section Scripts {



    @{
        <partial name="_ValidationScriptsPartial" />
    }

}
