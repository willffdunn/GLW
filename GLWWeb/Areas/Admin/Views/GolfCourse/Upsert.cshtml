@model GolfCourse
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div style="margin-top: -50px">
    <form method="post">
        <div class="pt-4 mt-3" >
            <div asp-validation-summary="All">
                <div class="row pb-2" style="text-align: center">
                    <h3 class="text-primary" style="text-align:center">@(Model.GCId!=0?"Update":"Add a") Golf Course</h3>
                    <hr />
                    <ul style="list-style-type:none;">
                        <input type="hidden" asp-for="GCId" />
                        <li>
                            <input asp-for="GCName" class="field-divided" placeholder="Course Name" size="50" />
                            <span asp-validation-for="GCName" class="text-danger"></span>
                        </li>
                        <br />
                       
                        <li>
                            <input asp-for="GCStreet" class="field-divided" placeholder="Street" />
                            <span asp-validation-for="GCStreet" class="text-danger"></span>

                            <input asp-for="GCCity" class="field-divided" placeholder="City" />
                            <span asp-validation-for="GCCity" class="text-danger"></span>
                        </li>
                        <br />
                        <li>
                            <select asp-for="GCState" class="form-divided" width="20px">
                                <option value="">Select State</option>
                                <option value="AL">Alabama</option>
                                <option value="AK">Alaska</option>
                                <option value="AS">American Samoa</option>
                                <option value="AZ">Arizona</option>
                                <option value="AR">Arkansas</option>
                                <option value="UM-81">Baker Island</option>
                                <option value="CA">California</option>
                                <option value="CO">Colorado</option>
                                <option value="CT">Connecticut</option>
                                <option value="DE">Delaware</option>
                                <option value="DC">District of Columbia</option>
                                <option value="FL">Florida</option>
                                <option value="GA">Georgia</option>
                                <option value="GU">Guam</option>
                                <option value="HI">Hawaii</option>
                                <option value="UM-84">Howland Island</option>
                                <option value="ID">Idaho</option>
                                <option value="IL">Illinois</option>
                                <option value="IN">Indiana</option>
                                <option value="IA">Iowa</option>
                                <option value="UM-86">Jarvis Island</option>
                                <option value="UM-67">Johnston Atoll</option>
                                <option value="KS">Kansas</option>
                                <option value="KY">Kentucky</option>
                                <option value="UM-89">Kingman Reef</option>
                                <option value="LA">Louisiana</option>
                                <option value="ME">Maine</option>
                                <option value="MD">Maryland</option>
                                <option value="MA">Massachusetts</option>
                                <option value="MI">Michigan</option>
                                <option value="UM-71">Midway Atoll</option>
                                <option value="MN">Minnesota</option>
                                <option value="MS">Mississippi</option>
                                <option value="MO">Missouri</option>
                                <option value="MT">Montana</option>
                                <option value="UM-76">Navassa Island</option>
                                <option value="NE">Nebraska</option>
                                <option value="NV">Nevada</option>
                                <option value="NH">New Hampshire</option>
                                <option value="NJ">New Jersey</option>
                                <option value="NM">New Mexico</option>
                                <option value="NY">New York</option>
                                <option value="NC">North Carolina</option>
                                <option value="ND">North Dakota</option>
                                <option value="MP">Northern Mariana Islands</option>
                                <option value="OH">Ohio</option>
                                <option value="OK">Oklahoma</option>
                                <option value="OR">Oregon</option>
                                <option value="UM-95">Palmyra Atoll</option>
                                <option value="PA">Pennsylvania</option>
                                <option value="PR">Puerto Rico</option>
                                <option value="RI">Rhode Island</option>
                                <option value="SC">South Carolina</option>
                                <option value="SD">South Dakota</option>
                                <option value="TN">Tennessee</option>
                                <option value="TX">Texas</option>
                                <option value="UM">United States Minor Outlying Islands</option>
                                <option value="VI">United States Virgin Islands</option>
                                <option value="UT">Utah</option>
                                <option value="VT">Vermont</option>
                                <option value="VA">Virginia</option>
                                <option value="UM-79">Wake Island</option>
                                <option value="WA">Washington</option>
                                <option value="WV">West Virginia</option>
                                <option value="WI">Wisconsin</option>
                                <option value="WY">Wyoming</option>
                            </select>

                            <input asp-for="GCZip" class="field-divided" placeholder="Zip" />
                            <span asp-validation-for="GCZip" class="text-danger"></span>

                        </li>
                        <br />
                        <li>
                            <Label>Phone</Label>
                            <input asp-for="GCPhoneNumber" class="form-divided" placeholder="Phone Number" />
                            <span asp-validation-for="GCPhoneNumber" class="text-danger"></span>


                            <Label>  Course Type</Label>
                            <select asp-for="GCType" class="form-divided">
                                <option value="public">Public</option>
                                <option value="county">County</option>
                                <option value="municipal">Municipal</option>
                            </select>

                            <Label> Nbr Of Holes</Label>
                            <select asp-for="GCNbrHoles" class="form-divided">
                                <option value="9">9</option>
                                <option value="18">18</option>
                                <option value="27">27</option>
                            </select>
                        </li>
                        <br />
                        <li>
                            <Label>1st Tee</Label>
                            <select asp-for="GCT1" class="form-divided">
                                <option value="Black">Black</option>
                                <option value="Blue">Blue</option>
                                <option value="White">White</option>
                                <option value="Red">Red</option>
                                <option value="Gold">Gold</option>
                                <option value="Green">Green</option>
                            </select>
                            @if (Model.GCT1 == "White" || Model.GCT1 == "Gold")
                            {
                                <input type ="hidden" asp-for="GCC1" value="Black" />
                            }
                            else
                            {
                                <input type="hidden" asp-for="GCC1" value="White" />
                            }
                            <Label>2nd Tee</Label>
                            <select asp-for="GCT2" class="form-divided">
                                <option value="Black">Black</option>
                                <option value="Blue">Blue</option>
                                <option value="White">White</option>
                                <option value="Red">Red</option>
                                <option value="Gold">Gold</option>
                                <option value="Green">Green</option>
                            </select>
                            @if (Model.GCT2 == "White" || Model.GCT2 == "Gold")
                            {
                                <input type="hidden" asp-for="GCC2" value="Black" />
                            }
                            else
                            {
                                <input type="hidden" asp-for="GCC2" value="White" />
                            }
                            <Label>3rd Tee</Label>
                            <select asp-for="GCT3" class="form-divided">
                                <option value="Black">Black</option>
                                <option value="Blue">Blue</option>
                                <option value="White">White</option>
                                <option value="Red">Red</option>
                                <option value="Gold">Gold</option>
                                <option value="Green">Green</option>
                            </select>
                            @if (Model.GCT3 == "White" || Model.GCT3 == "Gold")
                            {
                                <input type="hidden" asp-for="GCC3" value="Black" />
                            }
                            else
                            {
                                <input type="hidden" asp-for="GCC3" value="White" />
                            }
                            <Label>4th Tee</Label>
                            <select asp-for="GCT4" class="form-divided">
                                <option value="Black">Black</option>
                                <option value="Blue">Blue</option>
                                <option value="White">White</option>
                                <option value="Red">Red</option>
                                <option value="Gold">Gold</option>
                                <option value="Green">Green</option>
                            </select>
                            @if (Model.GCT4 == "White" || Model.GCT4 == "Gold")
                            {
                                <input type="hidden" asp-for="GCC4" value="Black" />
                            }
                            else
                            {
                                <input type="hidden" asp-for="GCC4" value="White" />
                            }
                            <Label>5th Tee</Label>
                            <select asp-for="GCT5" class="form-divided">
                                <option value="Black">Black</option>
                                <option value="Blue">Blue</option>
                                <option value="White">White</option>
                                <option value="Red">Red</option>
                                <option value="Gold">Gold</option>
                                <option value="Green">Green</option>
                            </select>
                            @if (Model.GCT5 == "White" || Model.GCT5 == "Gold")
                            {
                                <input type="hidden" asp-for="GCC5" value="Black" />
                            }
                            else
                            {
                                <input type="hidden" asp-for="GCC5" value="White" />
                            }
                        </li>
                        <br />
                        <li>
                            <label>When 27 Holes - Name each Course</label>
                            <br />
                            <input asp-for="GCName1" class="field-divided" placeholder="Course 1 Name" />
                            <span asp-validation-for="GCName1" class="text-danger"></span>

                            <input asp-for="GCName2" class="field-divided" placeholder="Course 2 Name" />
                            <span asp-validation-for="GCName2" class="text-danger"></span>

                            <input asp-for="GCName3" class="field-divided" placeholder="Course 3 Name" />
                            <span asp-validation-for="GCName3" class="text-danger"></span>
                        </li>
                        <br />
                        <li>
                            <textarea asp-for="GCComments" style="width: 700px" placeholder="Course Comments / Notes"></textarea>

                        </li>

                    </ul>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-6">
                @if (Model.GCId!=0)
                {
                    <button type="submit" class="btn btn-primary form-control">Update Changes</button>
                }
                else{
                    <button type="submit" class="btn btn-primary form-control">Add Course</button>
                }
            </div>
            <div class="col-6">
                <a asp asp-controller="GolfCourse" asp-action="Index" class="btn btn-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
    </form>
</div>
@section Scripts {



    @{
        <partial name="_ValidationScriptsPartial" />
    }

}