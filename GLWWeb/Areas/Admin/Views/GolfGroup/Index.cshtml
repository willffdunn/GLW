@using Models;
@model List<GolfGroup>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class-"container" style="width:100%">
    <div class="row pt-2 pb-1" style="margin-top:-50px ">
        <div class="col=4">
            <h3 class=" text-primary" style="text-align:center">@ViewBag.GCName</h3>
            <h3 class="text-primary" style="text-align:center">@ViewBag.GRDate</h3>
        </div>

        <div class="col=6" >
            <a asp asp-controller="GolfGroup" asp-action="Upsert" asp-route-GRId="@Model[0].GRId" class="btn btn-primary">
                Add a Golf Group
                <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>

    <div >
        <table id="gTable" class="table table-bordered table-striped ">
            <thead>

                <tr>
                    <th>
                        ScoreCard
                    </th>
                    <th>
                        Score
                    </th>
                    <th>
                        Players
                    </th>
                    <th>
                        Golf Round Group

                    <th>
                        Golf Round Date
                    </th>
                    <th>
                        Group Tee Time
                    </th>
                    <th>
                        Delete
                    </th>

                </tr>
            </thead>
            <tbody>

                @foreach (var obj in Model)
                {
                    <tr>
                        <th>
                            <div class="w-50 bntn-group" role="group">
                                <a asp-controller="GolfScore" asp-action="GGScore" asp-route-GGId="@obj.GGId"
                                   asp-route-GGId="@obj.GGId" class="btn btn-primary">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            </div>
                        </th>

                        <th>
                            <div class="w-50 bntn-group" role="group">
                                <a asp-controller="GolfScore" asp-action="GGScoreZ" asp-route-GGId="@obj.GGId" class="btn btn-primary">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            </div>
                        </th>
                        <th>
                            <div class="w-50 bntn-group" role="group">
                                <a asp-controller="GolfPlayer" asp-action="Index" asp-route-GGId="@obj.GGId" asp-route-GGId="@obj.GGId" class="btn btn-primary">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            </div>
                        </th>
                        <th>
                            <a href="GolfGroup/Browse?GGID=@obj.GGId">@obj.GGName</a>
                        </th>
                        <th>
                            @obj.GolfRound.GRDate.ToString("MM/dd/yyyy")
                        </th>
                        <th>
                            @obj.GGTtime
                        </th>
                        <th>
                            <div class="w-50 bntn-group" role="group">
                                <a asp-controller="GolfGroup" asp-action="Delete" asp-route-GGId="@obj.GGId" class="btn btn-danger">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </div>
                        </th>
                    </tr>

                }


            </tbody>

        </table>

    </div>

</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#gTable').DataTable();
    });
</script>


@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}