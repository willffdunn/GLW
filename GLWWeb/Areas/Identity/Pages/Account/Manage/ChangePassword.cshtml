@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="container text-center" style="margin-top: -40px">
    <h3 class="mb-4">@ViewData["Title"]</h3>
    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form id="change-password-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.OldPassword" class="form-control small" autocomplete="current-password" aria-required="true" placeholder="Enter old password" />
                    <label asp-for="Input.OldPassword" class="small">Old Password</label>
                    <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.NewPassword" class="form-control small" autocomplete="new-password" aria-required="true" placeholder="Enter new password" />
                    <label asp-for="Input.NewPassword" class="small">New Password</label>
                    <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control small" autocomplete="new-password" aria-required="true" placeholder="Confirm new password" />
                    <label asp-for="Input.ConfirmPassword" class="small">Confirm New Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="w-100 btn btn-lg btn-primary small">Update Password</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
