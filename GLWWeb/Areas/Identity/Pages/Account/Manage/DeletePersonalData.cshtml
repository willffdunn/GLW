@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container text-center" style="margin-top: -40px">
    <h3 class="mb-4">@ViewData["Title"]</h3>

    <div class="alert alert-warning" role="alert">
        <p class="mb-0 small">
            <strong>Warning: Deleting your data will permanently remove your account. This action is irreversible.</strong>
        </p>
    </div>

    <div class="d-flex justify-content-center">
        <form id="delete-user" method="post" class="w-100" style="max-width: 400px;">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            @if (Model.RequirePassword)
            {
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter your password" />
                    <label asp-for="Input.Password" class="form-label small">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>
            }
            <button class="w-100 btn btn-lg btn-danger small" type="submit">Delete Data and Close My Account</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
