@page
@model ForgotPasswordModel
<div class="row pt-2 pb-1" style="margin-top:-50px ">
    <div class="col=4">
        <h3 class=" text-primary" style="text-align:center">Forgot Member Password</h3>
        <br />
        <h4 class=" text-primary" style="text-align:center">Enter Email</h4>
    </div>
    <br />
    <div class="row" style="margin-left: 260px">
        <div class="col-6">
            <div class="row">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
