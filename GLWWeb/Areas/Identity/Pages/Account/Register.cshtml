@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3 col-md-12">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="ms-2 text-muted">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating col-md-6">
                <label asp-for="Input.LId" class="ms-2 text-muted">Select Golf League</label>
            </div>
            <br/>
            <br/>
            <div class="form-floating mb-3 col-md-6">
                <select asp-for="Input.LId" id="Input_LId" asp-items="@Model.Input.LeagueList" class="form-select" multiple>
                        <option value="" selected >Not a League Member </option>
                </select>
                <span asp-validation-for="Input.LId" class="text-danger"></span>

            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.FName" class="form-control" placeholder="name@example.com" />
                <label asp-for="Input.FName" class="ms-2 text-muted">First Name</label>
                <span asp-validation-for="Input.FName" class="text-danger"></span>
             </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.LName" class="form-control" placeholder="name@example.com" />
                <label asp-for="Input.LName" class="ms-2 text-muted">Last Name</label>
                <span asp-validation-for="Input.LName" class="text-danger"></span>
            </div>
                <input asp-for="Input.PhoneNumber" class="form-divided" placeholder="Phone Number" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>

            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.Street" class="field-divided" placeholder="Street" />
                <span asp-validation-for="Input.Street" class="text-danger"></span>

                <input asp-for="Input.City" class="field-divided" placeholder="City" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <br />
            <div class="form-floating mb-3 col-md-6">
                <select asp-for="Input.State" class="form-divided" width="20px">
                    <option value="">Select State</option>
                    <option value="AL">Alabama</option>
