@using Azure.Core;
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>TGBCWEB</title>
    <!-- Include FullCalendar CSS and JS files -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.1.0/main.min.css">
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.1.0/main.min.js"></script>
    <link rel="stylesheet" href="~/css/myboot.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>

    <!-- Include Summernote CSS and JS files -->

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>

        <!-- Custom styles -->
        <style></style>
    </head>



<body>
    <header>
        <nav class="navbar navbar-expand navbar-toggleable navbar-dark bg-black border-bottom box-shadow mb-5">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index" style="height:72px; margin-top: -10px"><img src="~/GBS.png" style="height:70px; margin-left: -10px"> Tropic Bay Golf Club</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link " asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="Admin" asp-controller="Member" asp-action="Index">Members</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="Admin" asp-controller="Event" asp-action="Index">Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="Admin" asp-controller="GolfRound" asp-action="Index">Rounds</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="Admin" asp-controller="GolfCourse" asp-action="Index">Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="Admin" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
     <style>
        /* Common styling for both desktop and mobile */
        img {
            max-width: 100%; /* Ensures images don't exceed their container */
            height: auto;
        }

        /* Media query for desktop screens */
        @@ media (min-width: 768px) {
            img.desktop {
                /* Desktop-specific styling */
                width: 9000px; /* Adjust this value as needed */
                /* Add any other desktop-specific styles */
            }
        }


        /* Media query for mobile screens */
        @@ media (max-width: 200px) {
            img.mobile {
                /* Mobile-specific styling */
                width: 150px; /* Adjust this value as needed */
                /* Add any other mobile-specific styles */
            }
        }

            .navbar .navbar-brand,
            .navbar .navbar-text {
                color: white;
            }


            .navbar-nav .nav-item .nav-link {
                color: white;
                           
            }
           
     
     </style>


        <main role="main" class="pb-3">

            
            @RenderBody()
            
            
           
        </main>
    </div>


    <footer class="border-top footer text-white  bg-dark" style="height:30px; position:fixed; bottom:0px; width:100%; text-align:left " >
        <div class="container" >
           Golf League Magic <i class="bi bi-magic"></i> from Golf League Wizard
        </div>
    </footer>
   
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    
       

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
