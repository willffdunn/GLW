@model Member
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form method="post">
    <div class="pt-4 mt-3">
        <div asp-validation-summary="All">
            <div class="row pb-2" style="text-align:center; margin-top: -45px">
                <h3 class="text-primary"> Delete Member</h3>
               
                <ul style="list-style-type:none;">

                    <li>
                        <input asp-for="FirstName" disabled class="field-divided" placeholder="First Name" />
                        <input asp-for="LastName" disabled placeholder="Last Name " />
                    </li>
                    <br />
                    <li>
                        <input asp-for="Email" disabled class="form-divided" placeholder="eMail" />
                    </li>
                    <br />
                    <li>
                        <input asp-for="PhoneNumber" disabled class="form-divided" placeholder="Phone Number" />

                    </li>
                    <br />
                    <li>
                        <Label>GolfCourseStatus</Label>
                        <select asp-for="MemberStatus" disabled class="form-divided">
                            <option value="active">Active</option>
                            <option value="inactive">Inactive</option>
                        </select>
                </ul>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <button type="submit" class="btn btn-primary form-control">Delete</button>
        </div>
        <div class="col-6">
            <a asp asp-controller="Member" asp-action="Index" class="btn btn-secondary form-control">
                Back to List
            </a>
        </div>
    </div>
</form>