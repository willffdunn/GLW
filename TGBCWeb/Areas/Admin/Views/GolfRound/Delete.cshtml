@model GolfRound
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

.<div class="container-fluid" style="margin-top: -45px">
    <form id="deleteForm" method="post" action="@Url.Action("Delete", "GolfRound")">
        <div class="pt-4 mt-3">
            <div asp-validation-summary="All">
                <div class="row pb-2">
                    <h3 style="text-align:center">
                        Delete a Golf Round
                    </h3>
                    <h3 style="text-align:center">
                        @ViewBag.GCName -  @ViewBag.GRDate</h3>

                    <hr />
                    <div class="col-12" style="margin-left: 150px">
                        <ul style="list-style-type:none;">
                            <li>
                                <input hidden asp-for=@Model.GRId />
                                <input disabled asp-for=@Model.GRType style="width: 250px" class="form-divided">
                            </li> 
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6" style="text-align:center">
                <button type="button" class="btn btn-primary form-control" onclick="confirmDelete()">
                    <i class="bi bi-trash-fill"></i> Delete
                </button>
            </div>
            <div class="col-6">
                <a asp-controller="GolfRound" asp-action="Index" class="btn btn-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}