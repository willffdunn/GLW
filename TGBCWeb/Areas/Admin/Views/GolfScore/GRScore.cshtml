@using Models;
@model List<GRScoreVM>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<partial name="pvNotification" />

<div class-"container" style="margin-top: -50px">
    <form method="post">
        <div class="row pt-2 pb-1">
            <div class="col=6" style="text-align:center">
                <h3 class="text-primary" style="text-align:center">@ViewBag.GCName</h3>
                <h3 class="text-primary" style="text-align:center">@ViewBag.GRDate</h3>
            </div>
            <div class="row pb-2">
                <h4 style="text-align: center" class="text-primary">@ViewBag.GGName </h4>
            </div>
        </div>

        <div class="row pb-2">
            <table class="table table-bordered table-striped ">
                <thead>
                    <tr>
                        <th>
                            Scorecard
                        </th>
                        <th>
                            Golf Player
                        </th>
                        <th>
                            Player Type
                        </th>
                        <th>
                            Group
                        <th>
                            Tee Time
                        </th>
                        <th>
                            Score
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                      @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr style="font-weight:bold">
                                    <td>
                                        <div class="w-50 bntn-group" role="group">
                                            <a asp-controller="GolfScore" asp-action="GPScore" asp-route-GPId=@Model[i].GPId
                                               class="btn btn-primary">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                        </div>
                                    </td>
                                    <td>
                                        
                                        <a href="~/Admin/Member/Browse?MemberID=@Model[i].MemberId" >
                                             @Model[i].GPFName @Model[i].GPLName 
                                        </a>
                                    </td>
                                    <td>
                                         @Model[i].GPType
                                    </td>
                                    <td>
                                         @Model[i].GGName 
                                    </td>
                                    <td>
                                         @Model[i].GGTime 
                                    </td>
                                    <td>
                                        <input type="hidden" asp-for=@Model[i].GPId />
                                        <input type="hidden" asp-for=@Model[i].MemberId />
                                        <input type="hidden" asp-for=@Model[i].GPLName />
                                        <input type="hidden" asp-for=@Model[i].GPFName />
                                        <input type="hidden" asp-for=@Model[i].GPType />
                                        <input type="hidden" asp-for=@Model[i].GGName />
                                        <input type="hidden" asp-for=@Model[i].GGTime />
                                        <input type="numeric" asp-for=@Model[i].GScore />
                                    </td>
                                </tr>
                        }
                    }
                </tbody>
  
            </table>
        </div>
  
        <div class="row">
            <div class="col-6">

                <button type="submit" value="List<GRScoreVM>" class="btn btn-primary form-control">Save Changes</button>

            </div>
            <div class="col-6">
                <a asp asp-controller="GolfRound" asp-action="Index" asp-route-GRId=@ViewBag.GRId class="btn btn-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
    </form>
</div>


@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}